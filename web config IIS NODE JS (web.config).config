<?xml version="1.0" encoding="utf-8"?>
<configuration>
<system.webServer>
 <httpErrors existingResponse="PassThrough" />
<rewrite>
  <rules>
    <rule name="nodejs">
      <match url="(.*)" />
      <conditions>
        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
      </conditions>
       <action type="Rewrite" url="/app.js" />
    </rule>
  </rules>
</rewrite> 
<security>
  <requestFiltering>
    <hiddenSegments>
      <add segment="node_modules" />
      <add segment="iisnode" />
    </hiddenSegments>
  </requestFiltering>
</security>       
</system.webServer>
 </configuration>

